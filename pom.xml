    </licenses>
    <developers>
        <developer>
            <id>eworley</id>
            <name>Evan Worley</name>
            <email>evanworley@gmail.com</email>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>-8</timezone>
        </developer>
    </developers>

